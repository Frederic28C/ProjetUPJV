{# src/OC/PlatformBundle/Resources/views/Advert/add.html.twig #}

{% extends "OCPlatformBundle::layout.html.twig" %}

{% block body %}

    <h2>Ajouter une annonce</h2>
    {{ include("OCPlatformBundle:Advert:form.html.twig") }}
    <div class="row">

        <h2>{{ advert.title }}</h2>
        <i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>

        {% if advert.image is not null %}
            <img src="{{ advert.image.url }}" alt="{{ advert.image.alt }}">
        {% endif %}
        <div class="well">
            {{ advert.content }}
        </div>

        <p>
            <a href="{{ path('oc_platform_homepage') }}" class="btn btn-default">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Retour à la liste
            </a>
            <a href="{{ path('photo_page', {'id': advert.id}) }}" class="btn btn-default">
                <i class="glyphicon glyphicon-edit"></i>
                Modifier l'annonce
            </a>
            <a href="{{ path('photo_page', {'id': advert.id}) }}" class="btn btn-danger">
                <i class="glyphicon glyphicon-trash"></i>
                Supprimer l'annonce
            </a>
        </p>
    </div>
    <p>
        Attention : cette annonce sera ajoutée directement
        sur la page d'accueil après validation du formulaire.
    </p>

{% endblock %}