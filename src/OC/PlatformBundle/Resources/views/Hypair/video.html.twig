{% extends "::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block menu %}
    {% include "OCPlatformBundle::menu.html.twig" %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        {% for liste in list %}
            <div class="col-md-4 col-md-offset-1">
                <div class="row">
                    <p style="text-align: center">
                        {{ liste['date']}}
                    </p>
                    <p style="text-align: center">
                        {{ liste['title']}}
                    </p>
                    <p>
                        <iframe width="450" height="250"
                                src="https://www.youtube.com/embed/{{ liste['url'] }}?ecver=1"
                                frameborder="0" allowfullscreen>
                        </iframe>
                    </p>
                    <br /><br />
                </div>
            </div>
            <span class="col-md-1"></span>
        {% endfor %}
    </div>
{% endblock %}