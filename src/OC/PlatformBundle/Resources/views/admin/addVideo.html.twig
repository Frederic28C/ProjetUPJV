{% extends "::layout.html.twig" %}

{% block title %}
    Administration ajout - {{ parent() }}
{% endblock %}

{% block menu %}
    {% include "OCPlatformBundle::menuAdmin.html.twig" %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}



{% block body %}

    <div class="row form-admin">
        <div class="col-md-4 col-md-offset-4 ">
            <h3>Réservé aux administrateurs</h3>
        </div>
        <div class="well col-md-4 col-md-offset-4 ">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_label(form.date, "Date", {'label_attr': {'class': 'col-md-12 control-label'}}) }}
                <div class="col-md-12">
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                </div>
                {{ form_errors(form.date) }}
            </div>

            <div class="form-group">
                {{ form_label(form.alt, "Titre", {'label_attr': {'class': 'col-md-12 control-label'}}) }}
                <div class="col-md-12">
                    {{ form_widget(form.alt, {'attr': {'class': 'form-control'}}) }}
                </div>
                {{ form_errors(form.alt) }}
            </div>

            <div class="form-group">
                {{ form_label(form.url, "Url de la vidéo", {'label_attr': {'class': 'col-md-12 control-label'}}) }}
                <div class="col-md-12">
                    {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
                </div>
                {{ form_errors(form.url) }}
            </div>


            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary login'}}) }}

            {{ form_rest(form) }}

            {{ form_end(form) }}
        </div>
    </div>

    <script>
        $('li a').click(function(e) {
            e.preventDefault();
            $('a').removeClass('active');
            $(this).addClass('active');
        });
    </script>

{% endblock %}